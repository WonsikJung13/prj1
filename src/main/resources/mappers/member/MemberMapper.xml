<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.prj1.mapper.member.MemberMapper">

    <select id="selectByNickName" resultType="com.study.prj1.domain.member.MemberDto">
        SELECT
        id,
        nickName,
        password,
        email,
        inserted
        FROM
        Member
        WHERE
        nickName = #{nickName}
    </select>

    <select id="selectByEmail" resultType="com.study.prj1.domain.member.MemberDto">
        SELECT
        id,
        nickName,
        password,
        email,
        inserted
        FROM
        Member
        WHERE
        email = #{email}
    </select>

    <delete id="deleteById">
        DELETE FROM Member
        WHERE id = #{id}
    </delete>

    <update id="update">
        UPDATE Member
        SET
        <if test="password != null">
            password = #{password},
        </if>
        nickName = #{nickName},
        email = #{email}
        WHERE
        id = #{id}

    </update>

    <select id="selectById" resultMap="memberMap">
        SELECT
            id,
            nickName,
            password,
            email,
            inserted,
            a.auth
        FROM
            Member m LEFT JOIN Authority a ON m.id = a.memberId
        WHERE
            id = #{id}

    </select>

    <resultMap id="memberMap" type="com.study.prj1.domain.member.MemberDto">
        <id column="id" property="id"/>
        <result column="nickName" property="nickName"/>
        <result column="password" property="password"/>
        <result column="email" property="email"/>
        <result column="inserted" property="inserted"/>
        <collection property="auth" ofType="string">
            <result column="auth" property="auth"/>
        </collection>
    </resultMap>

    <select id="selectAll" resultType="com.study.prj1.domain.member.MemberDto">
        SELECT
        id,
        nickName,
        '숨김' password,
        email,
        inserted
        FROM
        Member
        ORDER BY
        id
    </select>

    <insert id="insert">
        INSERT INTO Member (id, nickName, password, email)
        VALUES (#{id}, #{nickName}, #{password}, #{email})
    </insert>


</mapper>